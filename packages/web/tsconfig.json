{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "esnext",
    "jsx": "react",
    "strict": false,
    "outDir": "./out",
    "declaration": true,
    "noImplicitUseStrict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "build",
    "node_modules",
    "src/compontents/shared/Editor.tsx"
  ],
  "include": [
    "src"
  ]
}
