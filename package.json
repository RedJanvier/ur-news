{
  "name": "ur-news",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^4.0.0",
    "nodemon": "^2.0.12"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "release": "lerna version --conventional-commits --yes && lerna run publish --scope=@ur-news/locations",
    "start:server": "lerna run start --scope=@ur-news/server",
    "build": "lerna run build --stream --parallel",
    "start": "lerna run start --stream --parallel",
    "test": "lerna run test"
  },
  "dependencies": {
    "@ur-news/locations": "file:packages/locations",
    "@ur-news/server": "file:packages/server",
    "@ur-news/web": "file:packages/web"
  }
}
